# Database Configuration
DATABASE_URL='postgresql://your_username:your_password@your_host:port/your_database'

# JWT Configuration
JWT_SECRET='your_secret_key_here'

# Server Configuration
PORT=3000

# Email Configuration (để gửi OTP reset password)
# Lưu ý: Đây là App Password của Gmail, KHÔNG phải mật khẩu thường
# Cách tạo App Password:
# 1. Truy cập: https://myaccount.google.com/apppasswords
# 2. Bật 2-Step Verification nếu chưa có
# 3. Tạo App Password mới cho "Mail" -> "Other"
# 4. Copy mật khẩu 16 ký tự và paste vào đây
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password
